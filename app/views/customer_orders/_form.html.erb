<%= form_for(@customer_order, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @customer_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer_order.errors.count, "error") %> prohibited this customer_order from being saved:</h2>

      <ul>
      <% @customer_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :business_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :business_name, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :address, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :contact_person, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :contact_person, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :phone_number, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :mobile_number, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :mobile_number, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :email_address, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :email_address, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :year, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :year, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :month, "Pickup Month",class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :month, class: "form-control" %>
    </div>
  </div>
  
  <div class= "table-responsive">
            <table class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Variety</th>
                  <th>Clone</th>
                  <th>Rootstock</th>
                  <th>Quantity</th>
                  <th>Potted</th>
                  <th>Trimmed</th>
                </tr>
              </thead>
              <tbody>
                <%= f.fields_for :vine_orders do |builder| %>
                  <%= render "vine_order_fields", :f => builder %>
                 
                <% end %>
              </tbody>
          </table>
          </div>
          <div class="links">
      <%= link_to_add_association 'add timetables', f, :vine_orders, :class => "btn btn-default", data: {"association-insertion-node" => "tbody", "association-insertion-method" => "append"} %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


                
              
