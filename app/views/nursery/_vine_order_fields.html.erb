<tr class="nested-fields">
          
                <td class="form-group">
                  <%= f.collection_select :variety, Vine.order(:name), :name, :name, include_blank: "Varieties", class: "form-control" %>
                  </td>
                  
                  <td class="form-group">
                  <%= f.collection_select :clone, Clone.order(:name), :name, :name, include_blank: "...", class: "form-control" %>
                  </td>
                  
                  <td class="form-group">
                  <%= f.collection_select :rootstock, Rootstock.order(:name), :name, :name, include_blank: "Own Roots", class: "form-control" %>
                  </td>
                  
                  <td class="form-group">
                  <%= f.number_field :quantity, :value => (f.object.quantity || 0), class: 'form-control' %>
                  </td>
                  
                  <td class="form-group">
                  <%= f.check_box :potted, class: "form-control" %>
                  </td>
                  
                  <td class="form-group">
                  <%= f.check_box :trimmed, class: "form-control" %>
                  </td>
                  
                <td>
                 <%= link_to_remove_association "Remove vines", f, :class => "btn btn-default" %>
                </td>
                </tr>
               
