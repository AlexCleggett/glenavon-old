<p id="notice"><%= notice %></p>

<h1>Listing Customer Orders</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Address</th>
      <th>Contact person</th>
      <th>Phone number</th>
      <th>Mobile number</th>
      <th>Email address</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_orders.each do |customer_order| %>
      <tr>
        <td><%= customer_order.business_name %></td>
        <td><%= customer_order.address %></td>
        <td><%= customer_order.contact_person %></td>
        <td><%= customer_order.phone_number %></td>
        <td><%= customer_order.mobile_number %></td>
        <td><%= customer_order.email_address %></td>
        <td><%= customer_order.month %></td>
        <td><%= customer_order.year %></td>
        <td><%= link_to 'Show', customer_order %></td>
        <td><%= link_to 'Edit', edit_customer_order_path(customer_order) %></td>
        <td><%= link_to 'Destroy', customer_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

