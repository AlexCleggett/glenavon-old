<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">


        <title>Glenavon Nurseries</title>
        
        

        
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <%= stylesheet_link_tag "bootstrap" %>
        <%= stylesheet_link_tag "base" %>
        
    </head>
    
    <body >
        <%= render 'header' %>
        <ul class="nav nav-tabs gallery-tabs">
            <li class="active"><a data-toggle="tab" href="#images">Images</a></li>
            <li><a data-toggle="tab" href="#videos">Videos</a></li>
          
        </ul>
        <div class="tab-content">
            <div id="images" class="tab-pane fade in active">
                <div class="container-fluid gallery-container">
                    <div class="row">
                        <% @images.each_with_index do |image, index| %>
                            <div class="col-xs-6 col-sm-4 col-md-3 thumbnail">
                                <a href="#gallery" data-slide-to="<%= index %>" >
                                  <%= image_tag "carousel/#{image.split('/').last}", :data => { :toggle => 'modal', :target => '#myModal' } %>
                                </a>
                            </div>
                         <% end %>
                     </div>
                </div>
                
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                
                                  <div id="gallery" class="carousel slide" data-interval="false">
            
                                      <div class="carousel-inner">
                                          <% @images.each_with_index do |image, index| %>
                                            <div class="item <%= 'active' if index == 0 %>">
                                        
                                              <%= image_tag "carousel/#{image.split('/').last}", :alt => image %>
                                                <div class="carousel-caption">
                                                
                                                    <p>This is the description.</p>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                    
                    <!-- Left and right controls -->
                                    <a class="carousel-control left" href="#gallery" role="button" data-slide="prev"><span class="icon-prev"></span></a>
                                    <a class="carousel-control right" href="#gallery" role="button" data-slide="next"><span class="icon-next"></span></a>
                        
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <div id="videos" class="tab-pane fade">   
            <div class="container-fluid gallery-container">
            </div>
        </div>
    </div>

        <%= render 'footer' %>
        
        
    </body>
</html>